{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "noEmit": false,
      "declarationDir": "dist",
      "declaration": true,
      "emitDeclarationOnly": true,
      "outDir": "dist",
      "jsx": "react-jsx",
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "skipLibCheck": true,
      "types": ["react"],
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  